function countPositivesSumNegatives(input) {
    let count = 0;
    let count2 = 0;

    if (input == null || input.length < 1) {
        return [];
    } else {
        input.forEach(el => {
            if (el > 0) {
                count += 1;
            } else if (el < 0) {
                count2 += el
            } else {
                return []
            }
        })
    }
    return [count, count2];
}
